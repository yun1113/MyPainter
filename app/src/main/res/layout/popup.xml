<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="320dp"
    android:layout_height="200dp"
    android:background="@drawable/settingbackground"
    android:gravity="center">

    <TableRow
        android:gravity="center"
        android:padding="5dp" >

        <Button
            android:id="@+id/friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好友" />
        
    <Button
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gallery" />
    
    <Button
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享" />
    </TableRow>
    
	<TableRow
	    android:gravity="center"
	    android:padding="0dp" >

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="儲存" />

    <Button
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="模板" />
    
    <Button
        android:id="@+id/importpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="匯入圖片" />

    </TableRow>
    
	<TableRow
	    android:gravity="center"
	    android:padding="5dp" >

    <Button
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="個人設定" />

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用說明" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除畫布" />


    </TableRow>

</TableLayout>
