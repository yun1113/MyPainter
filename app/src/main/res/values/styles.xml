<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ButtonInSetting" parent="android:Widget.Material.Button">
        <item name="android:colorButtonNormal">#55000000</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Toolbar.TextSize" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <!--Pretty Painter Start-->
    <style name="BrushProperties"></style>
    <style name="BrushProperties.Wrapper">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="BrushProperties.Label">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="BrushProperties.Control">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BrushProperties.Control.Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
    <style name="BrushProperties.Controls">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="BrushProperties.Controls.Last">
        <item name="android:paddingBottom">0sp</item>
    </style>
    <style name="BrushsPresets">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#e5e5e5</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="BrushsPresets.Preset">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="Settings">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:visibility">gone</item>
    </style>
    <!--Pretty Painter End-->
</resources>